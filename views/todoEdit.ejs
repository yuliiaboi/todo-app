            <ul class="todo-list">
                <% todoTasks.forEach(details => { %>
                <% if (details._id == idTask) { %>
                <li class="todo-list-item">
                    <form action="/edit/<%= details._id %>" method="POST">
                        <input type="text" value="<%= details.content %>" name="content">
                        <button type="submit" class="submit"><span class="material-icons">check_circle</span></button>
                        <a href="/" class="cancel"><span class="material-icons">cancel</span></button>
                        </a>
                    </form>
                </li>
<% } else { %>
                <li class="todo-list-item">
                    <div class="todo-list-item-name"><%= details.content %></div>
                    <a href="/edit/<%= details._id %>" class="edit"><i class="material-icons">mode_edit</i></a>
                    <a href="/remove/<%= details._id %>" class="remove"><span class="material-icons">delete_sweep</span></span></a>
