    <div class="container">
        <h2>Sachen, die ich tun muss</h2>
        <div class="todo">
            <form action="/" method="POST" class="header">
            <input type="text" name="content" placeholder="z. B. die Hirsche fÃ¼ttern">
            <button type="submit"><span class="material-icons">playlist_add</span></button>
            </form>

            <ul class="todo-list">
                <% todoTasks.forEach(details => { %>
                <li class="todo-list-item">
                <div class="todo-list-item-name" id="todo-list-item-name"><%= details.content %></div>
                <button class="done" onclick="myFunction()">
                    <span class="material-icons">playlist_add_check</span>
                </button>                
                <a href="/edit/<%= details._id %>" class="edit">
                    <span class="material-icons">mode_edit</span>
                </a>
                <a href="/remove/<%= details._id %>" class="remove">
                    <span class="material-icons">delete_sweep</span>
                </a>
                </li>
                <% }) %>
                </ul>    
        </div>
    </div>
